@model IEnumerable<IsometaChallenge.Models.GenreViewModel>
@{
    ViewBag.Title = "Create";
}
<h2>Genres</h2>

<p>
    @Html.ActionLink( "Create New", "Create" )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor( model => model.Name )
        </th>
        <th>
            @Html.DisplayNameFor( model => model.CountArtists )
        </th>
        <th></th>
    </tr>

    @foreach( var item in Model )
    {
        <tr>
            <td>
                @Html.DisplayFor( modelItem => item.Name )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.CountArtists )
            </td>
            <td>
                @Html.ActionLink( "Edit", "Edit", new { id = item.GenreId } )
            </td>
        </tr>
    }

</table>
